<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Phase1.Wizzard.Wizzard"
    android:background="#fff">

    <include
        android:visibility="gone"
        android:id="@+id/wizzard_page1"
        layout="@layout/wizzard_page1"/>
    <include
        android:visibility="gone"
        android:id="@+id/wizzard_page2"
        layout="@layout/wizzard_page2"/>
    <include
        android:visibility="gone"
        android:id="@+id/wizzard_page3"
        layout="@layout/wizzard_page3"/>
    <include
        android:visibility="gone"
        android:id="@+id/wizzard_page4"
        layout="@layout/wizzard_page4"/>
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_right_arrow"
        android:id="@+id/fab_wizzard"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize" />
    <ProgressBar
        android:id="@+id/wizzard_progressbar"
        android:layout_gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="40"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:padding="0dp"
        />
</FrameLayout>