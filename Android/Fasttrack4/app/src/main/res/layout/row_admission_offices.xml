<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="@dimen/primary_margin"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/primary_margin"
    android:background="@drawable/edittext_shape"
    android:elevation="2dp">
    <TextView
        android:id="@+id/nearby_city"
        android:textColor="@color/colorSecondaryText"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Chandigarh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/nearby_address"
        android:textColor="@color/colorSecondaryText"
        android:textSize="20sp"
        android:text="Sunny enclave mohali sector 22 chandigarh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nearby_name"
        android:textColor="@color/colorSecondaryText"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Pushpindar Singh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="@dimen/secondary_margin"
            android:src="@android:drawable/ic_menu_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nearby_phone1"
            android:textColor="@color/colorSecondaryText"
            android:layout_margin="@dimen/primary_margin"
            android:gravity="center|start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="8686896723"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="@dimen/secondary_margin"
            android:src="@android:drawable/ic_menu_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nearby_phone2"
            android:textColor="@color/colorSecondaryText"
            android:layout_margin="@dimen/primary_margin"
            android:gravity="center|start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="9876542335"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nearby_direction"
        android:gravity="end"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="@dimen/secondary_margin"
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorSecondaryText"
            android:layout_margin="@dimen/secondary_margin"
            android:gravity="center|start"
            android:textSize="20sp"
            android:text="Directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>