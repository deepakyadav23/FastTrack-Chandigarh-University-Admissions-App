                android:layout_margin="@dimen/primary_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/infra_info"
                    android:padding="@dimen/primary_margin"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryText"

                    android:text="ssdasdasdadasdadada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <Button
        android:textColor="@color/colorPrimaryText"
        android:id="@+id/explore_btn"
        android:layout_margin="@dimen/primary_margin"
        android:padding="@dimen/primary_margin"
        android:text="Select Section"
        android:elevation="2dp"
        android:background="@drawable/btn_shape_blue"
        android:layout_gravity="center|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

</FrameLayout>