                    android:padding="@dimen/primary_margin"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/infra_2"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryText"
                    android:text="Apple"
                    android:layout_width="wrap_content"
