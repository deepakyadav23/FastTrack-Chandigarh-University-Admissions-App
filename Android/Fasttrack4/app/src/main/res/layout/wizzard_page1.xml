<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Phase1.Wizzard.Wizzard"
    android:background="#000">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/wiz5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_gravity="bottom|start"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/secondary_margin"
            android:background="@color/colorSecondaryLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/secondary_margin"
                android:background="@color/colorSecondaryDark"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimaryText"
                    android:text="Ranked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryText"
                    android:text="No. 3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/secondary_margin"
                    android:textColor="@color/colorSecondaryText"
                    android:gravity="center"
                    android:text="Top Pivate University of India"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/secondary_margin"
            android:background="@color/colorSecondaryLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/secondary_margin"
                android:background="@color/colorSecondaryDark"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimaryText"
                    android:text="Ranked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryText"
                    android:text="No. 1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/secondary_margin"
                    android:textColor="@color/colorSecondaryText"
                    android:gravity="center"
                    android:text="In North India Among Top Private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/secondary_margin"
            android:background="@color/colorSecondaryLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/secondary_margin"
                android:background="@color/colorSecondaryDark"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimaryText"
                    android:text="Ranked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryText"
                    android:text="No. 7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/secondary_margin"
                    android:textColor="@color/colorSecondaryText"
                    android:gravity="center"
                    android:text="Engineering Institute of India"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

</FrameLayout>