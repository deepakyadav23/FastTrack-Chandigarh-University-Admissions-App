<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:padding="@dimen/primary_margin"
    android:layout_margin="@dimen/secondary_margin"
    android:background="@drawable/card_shape"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="@dimen/secondary_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/video_share"
                android:layout_margin="@dimen/secondary_margin"
                android:padding="@dimen/secondary_margin"
                android:layout_gravity="end|top"
                android:src="@android:drawable/ic_menu_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/video_play"
                android:layout_gravity="center"
                android:src="@drawable/ic_youtube"
                android:layout_width="100dp"
                android:layout_height="60dp" />
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/video_image"

                android:src="@drawable/back1"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/video_title"
                android:text="This is the titleof the Video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/video_description"
                android:text="Description about the video Description about the video Description about the video Description about the video "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>