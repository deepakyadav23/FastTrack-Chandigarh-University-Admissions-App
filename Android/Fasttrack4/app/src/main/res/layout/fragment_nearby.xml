<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:padding="@dimen/primary_margin"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center"
            android:text="OUTSTATION ADMISSIONS OFFICES"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:gravity="center"
            android:text="Select a State to view the details of Admission offices in that region"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:foregroundTint="@color/colorSecondaryText"
            android:entries="@array/dummy"
            android:layout_margin="@dimen/primary_margin"
            android:background="@drawable/edittext_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minInput_height_primary"
            android:id="@+id/nearby_states"/>

    </LinearLayout>
<ListView
    android:layout_margin="@dimen/primary_margin"
    android:dividerHeight="@dimen/primary_margin"
    android:id="@+id/nearby_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></ListView>




</LinearLayout>